<div id="header">        
  <% if current_page?(root_path) %>
    <p>Todos os Posts</p>
  <% elsif current_page?(sobre_path) %>
    <p>Sobre mim</p>
  <% else %>
    <%= link_to "Voltar para lista de posts", root_path %>
  <% end %>
  
  <% if user_signed_in? %>
    <div class="buttons">
      <%= link_to "Novo Post", new_post_path, :class => "button" %>
      <%= link_to "Log Out", destroy_user_session_path, :class => "button", method: :delete %>ï»¿
    </div>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag(:div, msg, class: "alert") %>
<% end %>
